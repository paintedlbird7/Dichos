<!-- views/dichos/show.ejs-->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/stylesheets/style.css">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <title>
    <%= dicho.title %>
  </title>
</head>
<body>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    
    <div class="container" style="margin-top: 50px;">
      <div class="row">
        <div class="col s12 m8 offset-m2">
          <div class="card">
            <div class="card-content">
              <span class="card-title red-text text-darken-2"><%= dicho.title %></span>
              <% if (dicho.company) { %>
                <p class="grey-text">Company: <%= dicho.company %></p>
              <% } %>
              <% if (dicho.notes) { %>
                <p><strong>By:</strong> <%= dicho.notes %></p>
              <% } %>
              <% if (dicho.postingLink) { %>
                <p><a href="<%= dicho.postingLink %>" target="_blank">View quote posting</a></p>
              <% } %>
            </div>
            
            <div class="card-action">
              <a href="/users/<%= user._id %>/dichos/<%= dicho._id %>/edit" class="btn red lighten-2">
                <i class="material-icons left">edit</i>Edit
              </a>
              
              <form action="/users/<%= user._id %>/dichos/<%= dicho._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn red lighten-2">
                  <i class="material-icons left">delete</i>Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <footer class="center-align">
      <p>2025 Rosa Perez | Painted Bird Designs
        <a href="https://github.com/paintedlbird7" target="_blank">GitHub</a> |
        <a href="https://www.rosapÃ©rez.com">Portfolio</a>
      </p>
    </footer>
  </body>
  
</body>

</html>

