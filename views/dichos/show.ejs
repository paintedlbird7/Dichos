<!-- views/dichos/show.ejs-->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= dicho.title %></title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1><%= dicho.title %> <%= dicho.company %></h1>
    <% if (dicho.notes) { %>
    <p>Notes: <%= dicho.notes %></p>
    <% } %> <% if (dicho.postingLink) { %>
    <a href="<%= dicho.postingLink %>">View quote posting</a>
    <% } %>
    <p>Current Language: <%= dicho.status %></p>
    <!-- We'll use method-override to allow us to hit a delete route: -->
    <form
      action="/users/<%= user._id %>/dichos/<%= dicho._id %>?_method=DELETE"
      method="POST"
    >
      <button type="submit">Delete this quote</button>
    </form>
  </body>
</html>
